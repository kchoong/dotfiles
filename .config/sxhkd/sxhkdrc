
#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + r
	bspc wm -r

# make sxhkd reload its configuration files:
super + alt + t
    pkill -USR1 -x sxhkd

# close and kill
super + w
	bspc node -c

#
# set the window mode
#

# set tiled
super + t
	bspc node -t tiled

# set pseudo tiled
super + z
    bspc node -t pseudo_tiled

# set floating window
super + f
    bspc node -t floating

#
# desktop/monitor
#

# focus or send to the given desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}';

# send to the given desktop
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}' --follow

super + {Left,Right}
	bspc desktop -f {prev,next}.local

super + shift + {Left,Right}
	bspc node -d {prev,next}.local --follow

super + {Up,Down}
	bspc monitor -f {prev,next}

super + shift + {Up,Down}
	bspc node -m {prev,next} --follow

#
# tree
#

# rotate the leaves of the tree
super + {comma,period}
    bspc node @focused:/ -R {270,90}

#
# focus/swap
#

# swap the node in the given direction
super + alt + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# focus the node in the given direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + {_,shift + }Tab
  bspc monitor -f {next,prev}

# focus the last desktop
super + Tab
	bspc desktop -f last

#
# resize/move
#

# expand a window by moving one of its side outward
super + {j,k,i,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + shift + {j,k,i,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# swap the node in the given direction
super + ctrl + {j,k,i,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}


#
# display mode
#

# only primary display
super + alt + 1
	sh ~/.scripts/primary.sh

# only secondary display
super + alt + 2
	sh ~/.scripts/secondary.sh

# extending display
super + alt + 3
	sh ~/.scripts/extended.sh

# extending display - reverse primary
super + alt + 4
	sh ~/.scripts/extended-reverse.sh

# duplicate display
super + alt + 4
	sh ~/.scripts/duplicate.sh

# turn off screen
super + alt + minus
	sh ~/.scripts/screentoggle.sh

#
# Fn-hotkeys
#

# brightness down
XF86MonBrightnessDown
	light -U 10

# brightness up
XF86MonBrightnessUp
	light -A 10

# lower volume
XF86AudioLowerVolume
	amixer set Master 2%-

# raise volume
XF86AudioRaiseVolume
	amixer set Master 2%+

# toggle mute
XF86AudioMute
  amixer set Master toggle

#
# applications launchers
#

# terminal emulator
super + Return
	urxvt

# program launcher
super + space
	rofi -show drun -theme themes/appsmenu.rasi

# program and run launcher
super + alt + space
	rofi -show combi -theme themes/appsmenu.rasi

# window selector
super + ctrl + space
	rofi -show window -theme themes/appsmenu.rasi

# screenshot menu
Print
	sh ~/.config/rofi/scripts/scrotmenu.sh

# lock session
super + o
	light-locker-command -l

# power menu
super + p
	sh ~/.config/rofi/scripts/powermenu.sh
